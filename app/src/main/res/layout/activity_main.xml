<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:orientation="vertical"
    android:weightSum="6"
    tools:context="mrkappdevelopers.com.fragmenttransaction.MainActivity">

    <fragment
        android:name="mrkappdevelopers.com.fragmenttransaction.One"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="@android:color/holo_orange_light"
        android:id="@+id/fragment1">

    </fragment>

    <Button
        android:id="@+id/btFragment2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="@string/click_to_move_fragment_2"
        android:onClick="changeFragment"/>


    <Button
        android:id="@+id/btFragment3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="@string/click_to_move_fragment_3"
        android:onClick="changeFragment"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
